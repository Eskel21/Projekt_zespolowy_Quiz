@page
@model EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating-v2">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating-v2">
        <label class="form-label" asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">

        <input class="account-link" type="submit" value="Save"/>
        <input class="account-link" type="submit" value="Back" asp-area="Identity" asp-page="/Account/Manage/Email" title="Manage" />
    </div>
</form>
