﻿@using Projekt_Quizy
@inject SignInManager<IdentityUser> SignInManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <ul class="nav-item"><a class="account-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="/Profile">Profile</a></ul>
    <ul class="nav-item"><a class="account-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></ul>
    <ul class="nav-item"><a class="account-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></ul>
    @if (hasExternalLogins)
    {
        <ul id="external-logins" class="account-link"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></ul>
    }
    <ul class="nav-item">
        <a class="account-link" asp-page="./EditProfile">Name/surname</a>
    </ul>
</ul>